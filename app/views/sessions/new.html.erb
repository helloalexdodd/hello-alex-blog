<h1 class="text-center mt-4">Log In</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-5 mb-3 bg-secondary rounded", local: true) do |f|%>
        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-control text-light"%>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address"%>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-control text-light"%>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password"%>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit "Log in", class: "btn btn-outline-light" %>
        </div>
        <div class="form-group row justify-content-center">
          <%= link_to '[ Cancel Return to Articles Listing ]', articles_path, class: "text-info"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
